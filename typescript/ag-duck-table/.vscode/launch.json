{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug SSR Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/ag-duck-table/server/server.mjs",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "Build SSR"
    },
    {
      "name": "Attach to SSR Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }
  ]
}